{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "table_common.schema.json",
  "title": "Generic ISO table data file",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "style",
    "columns",
    "rows"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^table-\\d{2}$"
    },
    "style": {
      "type": [
        "string",
        "null"
      ]
    },
    "columns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "key",
          "title"
        ],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "title": {
            "type": "string"
          }
        }
      }
    },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      }
    }
  }
}
