{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://iso26262-rust-mapping.local/schema/paragraph-ids.schema.json",
  "title": "ISO 26262 statement-unit export",
  "description": "Schema for build/paragraph-ids.json generated by the Sphinx traceability pipeline.",
  "oneOf": [
    {
      "type": "array",
      "items": {
        "$ref": "#/$defs/statementRecord"
      }
    },
    {
      "type": "object",
      "required": [
        "schema_version",
        "records"
      ],
      "properties": {
        "schema_version": {
          "const": 1
        },
        "records": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/statementRecord"
          }
        }
      },
      "additionalProperties": false
    }
  ],
  "$defs": {
    "traceStatus": {
      "type": "string",
      "enum": [
        "mapped",
        "unmapped_with_rationale",
        "out_of_scope_with_rationale"
      ]
    },
    "unitType": {
      "type": "string",
      "enum": [
        "paragraph",
        "list_item",
        "table_row",
        "table_cell"
      ]
    },
    "statementRecord": {
      "type": "object",
      "required": [
        "id",
        "unit_type",
        "display_number",
        "doc",
        "href",
        "checksum",
        "trace_status",
        "anchor_ids",
        "relation",
        "source_locator"
      ],
      "properties": {
        "id": {
          "pattern": "^irm_[A-Za-z0-9]{12}$",
          "type": "string"
        },
        "unit_type": {
          "$ref": "#/$defs/unitType"
        },
        "display_number": {
          "type": "string",
          "minLength": 1
        },
        "doc": {
          "type": "string",
          "minLength": 1
        },
        "href": {
          "type": "string",
          "minLength": 1
        },
        "checksum": {
          "type": "string",
          "minLength": 1
        },
        "trace_status": {
          "$ref": "#/$defs/traceStatus"
        },
        "anchor_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "relation": {
          "type": "string"
        },
        "source_locator": {
          "type": "object",
          "required": [
            "kind",
            "path"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "markdown",
                "table_row",
                "table_cell"
              ]
            },
            "path": {
              "type": "string",
              "minLength": 1
            },
            "line": {
              "type": "integer",
              "minimum": 1
            },
            "column": {
              "type": "integer",
              "minimum": 1
            },
            "table_id": {
              "type": "string"
            },
            "row_id": {
              "type": "string"
            },
            "col_key": {
              "type": "string"
            }
          },
          "additionalProperties": true
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "trace_status": {
                "const": "mapped"
              }
            },
            "required": [
              "trace_status"
            ]
          },
          "then": {
            "properties": {
              "anchor_ids": {
                "minItems": 1
              }
            }
          }
        }
      ],
      "additionalProperties": true
    }
  }
}
