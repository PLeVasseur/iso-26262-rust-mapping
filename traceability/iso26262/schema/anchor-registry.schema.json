{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://iso26262-rust-mapping.local/schema/anchor-registry.schema.json",
  "title": "ISO 26262 anchor registry",
  "type": "object",
  "required": [
    "schema_version",
    "anchors"
  ],
  "properties": {
    "schema_version": {
      "const": 1
    },
    "anchors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "anchor_id",
          "part",
          "unit",
          "status"
        ],
        "properties": {
          "anchor_id": {
            "type": "string",
            "pattern": "^ISO26262:[A-Za-z0-9.-]+:P[0-9]{2}:[A-Za-z0-9.:-]+:[A-Z]{1,3}:[A-Za-z0-9.:-]+$"
          },
          "part": {
            "type": "string",
            "pattern": "^P[0-9]{2}$"
          },
          "unit": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "mapped",
              "unmapped_with_rationale",
              "out_of_scope_with_rationale"
            ]
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
